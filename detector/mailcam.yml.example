model:
  # ONNX delivery model
  path: /home/user/mailcam/models/delivery_task.onnx
  # Labels file should match what you used with the legacy detector
  labels: /home/user/models/delivery.names
  # Inference parameters
  allow_labels: [amazon, dhl, fedex, ups, usps]
  imgsz: 640
  conf_min: 0.30
  area_min_frac: 0.0005

mqtt:
  host: YOUR_MQTT_HOST  # e.g., 10.0.0.2 or homeassistant.local
  port: 1883
  user: YOUR_MQTT_USER  # e.g., delivery
  password: YOUR_MQTT_PASSWORD  # Set your MQTT password here
  state_topic: mailcam/state
  detail_topic: mailcam/details

source:
  # We are reading a single JPEG snapshot periodically, not an RTSP stream
  kind: image
  url: "http://YOUR_HA_HOST:8123/local/mailcam/latest.jpg"  # Update with your Home Assistant URL
  # Polling interval in seconds
  poll_sec: 2.5
  timeout_sec: 5.0
